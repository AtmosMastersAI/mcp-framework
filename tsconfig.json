{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@auth/*": ["auth/*"],
      "@transport/*": ["transports/*"],
      "@utils/*": ["utils/*"],
      "@cli/*": ["cli/*"],
      "@loaders/*": ["loaders/*"],
      "@tools/*": ["tools/*"],
      "@resources/*": ["resources/*"],
      "@prompts/*": ["prompts/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
